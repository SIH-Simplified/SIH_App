<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title> Update</title>
    <link rel="stylesheet" href="/stylesheets/superAdmin/sendUpdates.css">
    <script src="https://kit.fontawesome.com/577ae30e95.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>

<body>
    <div class="main">
        <form action="http://localhost:3000/superAdmin/pushUpdates/create" method="post">
            <div class="main-cont">
                <div class="top">
                    <div class="img"></div>
                    <div class="title"> EDUCATION MINISTRY </div>
                    <div class="dot"> <a href="#" class="dot-link"> <i class="fa-solid fa-ellipsis-vertical"></i></a>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlInput1" cl ass="form-label">Email address</label>
                    <input type="title" class="form-control" id="exampleFormControlInput1"
                        placeholder="name@example.com">
                </div>
                <div class="drop-down">
                    <select name="district" class="form-select district" aria-label="Default select example">
                        <option selected>District</option>
                        <% if(typeof district !=="undefined" && district.length !==0) {%>
                            <% for(let i=0; i < district.length ; i++) {%>
                                <option value="<%= district[i]%>">
                                    <%= district[i] %>
                                </option>
                                <% } %>
                                    <% } %>
                    </select>
                </div>

                <div class="text-box">
                    <div class="form-floating">
                        <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea"
                            name="message"></textarea>
                        <label for="floatingTextarea">Message</label>
                    </div>
                </div>
                <div class="last">
                    <div class="icon">
                        <div class="icon-1"><a href="#" class="icon-link"> <i class="fa-regular fa-image"></i></a></div>
                        <div class="icon-1"><a href="#" class="icon-link"><i class="fa-solid fa-location-dot"></i></a>
                        </div>
                        <div class="icon-1"><a href="#" class="icon-link"><i class="fa-solid fa-face-smile"> </i></a>
                        </div>
                        <div class="icon-1"><a href="#" class="icon-link"> <i class="fa-solid fa-tags"></i> </a></div>
                        <div class="icon-1"><a href="#" class="icon-link"> <i class="fa-solid fa-at"></i></a></div>

                    </div>
                    <div class="button">
                        <button class="post">POST</button>
                    </div>
                </div>
        </form>
    </div>
    </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>
</body>

</html>