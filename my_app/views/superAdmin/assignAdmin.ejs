<!DOCTYPE html>
<html lang="en">

<head>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@600&family=Poppins:wght@300&display=swap');

        * {
            margin: 0;
        }

        body {
            background: #f8f8f8;
        }
    </style>
</head>

<body>

    <div style="background:white;width:80%;background:white;height:80%;position:absolute;top:10%;left:10%;">

        <div style="width:100%;height:6rem;background:lightgrey;display:flex;" id="contentnavbar">

            <font
                style="font-weight:bold;font-size:min(3.5vw,2rem);color:black;font-family:'Poppins', sans-serif;border:none;border-radius:7px;margin-left:60px;margin-top:20px;">
                Allot admin roles</font>
            <form style="border:none;background:white;width:20%;margin-left:30px;height:5rem;margin-top:0.5rem;">
                <button type="submit" style="border:none;background:none;color:lightgrey"><span
                        class="glyphicon glyphicon-search"></span></button>
                <input type="text" style="width: 80%;background:none;border:none;height:5rem;" placeholder="Search">

            </form>
            <button type="submit"
                style="border:none;color:blue;padding:10px;;font-size:min(2vw,4rem);height:10%;background:none;">+</button>
        </div>
        <table style="width:100%;font-family:'Poppins';font-size:min(2vw,2rem);">

            <tr style="border-bottom:1px solid lightgrey;">
                <td></td>
                <th> School Name </th>
                <th>District</th>
                <th>Principal</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Start Year</th>
                <th>Actions</th>
            </tr>

            <% if(typeof assignAdmin !=="undefined" && assignAdmin.length !==0) {%>
                <% for(let i=0;i<assignAdmin.length;i++) {%>
                    <tr style="border-bottom:1px solid lightgrey;">
                        <td>
                            <form><input type="checkbox"></form>
                        </td>
                        <td>
                            <%= assignAdmin[i].schoolName %>
                        </td>
                        <td>
                            <%= assignAdmin[i].department %>
                        </td>
                        <td>
                            <%= assignAdmin[i].HeadOfDepartment %>
                        </td>
                        <td>
                            <%= assignAdmin[i].phone %>
                        </td>
                        <td>
                            <%= assignAdmin[i].email %>
                        </td>
                        <td>
                            <%= assignAdmin[i].startYear %>
                        </td>
                        <td>
                            <form action="http://localhost:3000/superAdmin/assignAdmin/<%= i %>?_method=PATCH"
                                method="post">
                                <button type="submit" class="btn btn-light">
                                    <span class="glyphicon glyphicon-check" style="color:blue;"></span>
                                </button>
                            </form>
                            <form action="http://localhost:3000/superAdmin/assignAdmin/<%= i %>?_method=DELETE"
                                method="post">
                                <button type="submit" class="btn btn-light">
                                    <span class="glyphicon glyphicon-trash" style="color:orangered"></span>
                                </button>
                            </form>
                        </td>
                    </tr>
                    <% } %>
                        <% } %>
        </table>
    </div>


    <script>
        var width = window.screen.availWidth;

        var messagecontent = document.getElementById("messagecontent");



        if (width <= 800) {
            var contentnavbar = document.getElementById("contentnavbar");
            var message = document.getElementById("message");

            message.style.top = contentnavbar.offsetHeight + "px";

        }


    </script>

</body>

</html>