          </select>
    </form>
    <span class = "row">
        <span class = "col-md-6">
    <div id = "chart" style = "width:50%;">

        <script>
            var options = {
  
  
              series: [74,26],
  
              chart: {
                type: 'donut',
  
              },
              stroke: {
                show: false,
                width: 0
              },
              legend: {
                show: false
              },
              colors: ['rgb(35, 71, 185);', 'rgb(51, 99, 255)'],
              responsive: [{
                breakpoint: "100%",
                options: {
                  chart: {
                    width: "50%"
                  },
  
                }
              }]
            };
  
            var chart = new ApexCharts(document.querySelector("#chart"), options);
            chart.render();
          </script>

    </div>
